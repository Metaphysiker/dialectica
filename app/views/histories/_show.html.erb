<div class="history-<%= history.id %>">
<p>
  <button class="btn btn-light arrow-animation" type="button" data-toggle="collapse" data-target="#collapse-history-<%= history.id %>" aria-expanded="true" aria-controls="collapse-history-<%= history.id %>">
    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
    </svg>

  </button>
  <strong><%= history.user.name unless history.user.blank? %> - <%= l(history.created_at, format: :usa) %></strong>
</p>
<div class="collapse show" id="collapse-history-<%= history.id %>">
  <div class="card card-body">
    <%= raw history.content %>
  </div>
</div>
</div>
