<!-- Page Content -->
 <div class="container">

   <div class="row">

     <!-- Post Content Column -->
     <div class="col-lg-8 my-4">

       <% if is_user_admin?(current_user) %>
        <%= link_to "Eintrag bearbeiten", edit_page_path(page), class: "btn btn-primary my-2" %>
       <% end %>

       <!-- Preview Image -->
       <% if page.cover.attached? %>
          <%= image_tag page.cover, class: "img-fluid  rounded" %>
         <hr>
       <% end %>

       <!-- Title -->
       <h1 class="mt-4 text-center"><%= page.title %></h1>
       <hr>

       <!-- Description and Keywords -->
       <% unless page.description.blank? %>
         <p class="text-center text-justify mx-2">
            <%= page.description %>
         </p>
         <% unless page.keywords.blank? %>
           <p class="text-center text-justify mx-2">
             <small class="text-muted"><strong>Keywords: </strong><%= page.keywords %></small>
           </p>
         <% end %>
         <hr>
       <% end %>


       <!-- Post Content -->
       <div class="text-justify">
         <%= page.content %>
        </div>

       <hr>

     </div>

     <!-- Sidebar Widgets Column -->
     <div class="col-md-4">

       <!-- Search Widget -->
       <div class="card my-4">
         <h5 class="card-header">Search</h5>
         <div class="card-body">
           <div class="input-group">
             <input type="text" class="form-control" placeholder="Search for...">
             <span class="input-group-btn">
               <button class="btn btn-secondary" type="button">Go!</button>
             </span>
           </div>
         </div>
       </div>

       <!-- Categories Widget -->
       <div class="card my-4">
         <h5 class="card-header">Categories</h5>
         <div class="card-body">
           <div class="row">
             <div class="col-lg-6">
               <ul class="list-unstyled mb-0">
                 <li>
                   <a href="#">Web Design</a>
                 </li>
                 <li>
                   <a href="#">HTML</a>
                 </li>
                 <li>
                   <a href="#">Freebies</a>
                 </li>
               </ul>
             </div>
             <div class="col-lg-6">
               <ul class="list-unstyled mb-0">
                 <li>
                   <a href="#">JavaScript</a>
                 </li>
                 <li>
                   <a href="#">CSS</a>
                 </li>
                 <li>
                   <a href="#">Tutorials</a>
                 </li>
               </ul>
             </div>
           </div>
         </div>
       </div>

       <!-- Side Widget -->
       <div class="card my-4">
         <h5 class="card-header">Side Widget</h5>
         <div class="card-body">
           You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
         </div>
       </div>

     </div>

   </div>
   <!-- /.row -->

 </div>
