<div class="container">

    <h1>New Submissions</h1>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Status</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        <% Article.submitted.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td><%= article.status %></td>
          <td>
            <button type="button" class="btn btn-primary btn-sm">Assign Reviewers</button> <button type="button" class="btn btn-info btn-sm">Show Discussion</button> <button type="button" class="btn btn-danger btn-sm">Reject</button> 
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

</div>
